  "options": [
    {
      "variable": "announcement_message_text",
      "label": "Announcement text",
      "type": "text",
      "description": "Displays an announcement message on the top of every page"
    },
    {
      "variable": "contact_text",
      "label": "Contact page text",
      "type": "text",
      "description": "Displays a message within your contact page"
    },
    {
      "variable": "cart_text",
      "label": "Cart page text",
      "type": "text",
      "description": "Displays a message within your cart page"
    },
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "logo_image_height",
      "label": "Logo image height",
      "type": "select",
      "options": [
        ["Small", "120"],
        ["Medium", "180"],
        ["Large", "240"]
      ],
      "default": "180",
      "description": "Controls the maximum height of your logo"
    },
    {
      "variable": "nav_items",
      "label": "Navigation items",
      "type": "select",
      "options": "0..6",
      "default": 2,
      "description": "The number of custom page links show in the main navigation"
    },
    {
      "variable": "hero_image_width",
      "label": "Hero image width",
      "type": "select",
      "options": [
        ["Full page", "full-page"],
        ["Constrained", "constrained"]
      ],
      "default": "constrained",
      "description": "Sets the width of your hero image"
    },
    {
      "variable": "hero_overlay_opacity",
      "label": "Hero overlay opacity",
      "type": "select",
      "options": [
        ["None", "0"],
        ["25%", ".25"],
        ["50%", ".5"]
      ],
      "default": ".5",
      "description": "Darkens the Home page hero. Helps legibility of your hero welcome text and button"
    },
    {
      "variable": "hero_welcome_text",
      "label": "Hero welcome text",
      "type": "text",
      "description": "Displays a welcome message over your hero image"
    },
    {
      "variable": "hero_button_text",
      "label": "Hero button text",
      "type": "text",
      "description": "Displays over your hero image and links to your Products page",
      "default": "Shop now"
    },
    {
      "variable": "featured_header",
      "label": "Featured products header",
      "type": "text",
      "description": "Displays above featured products on the Home page",
      "default": "Featured Products"
    },
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products displayed on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": [
        ["Regular", "regular"],
        ["Top Selling", "sales"],
        ["Newest", "newest"]
      ],
      "default": "regular",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "featured_products_layout",
      "label": "Featured products layout",
      "type": "select",
      "options": [
        ["Alternating", "alternating"],
        ["Standard grid", "standard-grid"]
      ],
      "default": "alternating",
      "description": "Sets a layout style for featured products on the Home page"
    },
    {
      "variable": "alternating_product_image_style",
      "label": "Alternating product image style",
      "type": "select",
      "options": [
        ["Fixed height", "fixed-height"],
        ["Original dimensions", "original-dimensions"]
      ],
      "default": "original-dimensions",
      "description": "Sets the display of images for featured products in alternating layout style"
    },
    {
      "variable": "all_products_button_text",
      "label": "All products button text",
      "type": "text",
      "description": "Displays underneath featured products and links to your Product Page",
      "default": "All Products"
    },
    {
      "variable": "show_home_page_categories",
      "label": "Display categories on Home page",
      "type": "boolean",
      "default": true,
      "description": "Displays categories as a grid on the Home page"
    },
    {
      "variable": "home_page_categories_header",
      "label": "Categories header",
      "type": "text",
      "description": "Displays above categories on the Home page",
      "default": "Categories"
    },
    {
      "variable": "category_image_style",
      "label": "Category image style",
      "type": "select",
      "options": [
        ["Over image", "hover"],
        ["Under image", "under_image"]
      ],
      "default": "under_image",
      "description": "Shows a categoryâ€™s name over the image with an overlay, or under the image"
    },
    {
      "variable": "max_categories_per_row",
      "label": "Maximum categories per row",
      "type": "select",
      "options": "1..4",
      "default": 3,
      "description": "The maximum number of Home page categories displayed per row"
    },
    {
      "variable": "grid_image_style",
      "label": "Product grid image style",
      "type": "select",
      "options": [
        ["Normal", "default"],
        ["Fit to square", "contain"],
        ["Crop to square", "cover"]
      ],
      "default": "cover",
      "description": "Sets the display of images in the product grid"
    },
    {
      "variable": "product_grid_info",
      "label": "Product grid info",
      "type": "select",
      "options": [
        ["Show on hover", "hover"],
        ["Under image", "under_image"]
      ],
      "default": "under_image",
      "description": "Shows a product's name & price on hover, or under the image"
    },
    {
      "variable": "max_products_per_row",
      "label": "Maximum products per row",
      "type": "select",
      "options": "1..4",
      "default": 3,
      "description": "The maximum number of products displayed per row on larger screens"
    },
    {
      "variable": "max_products_per_row_mobile",
      "label": "Maximum products per row (mobile)",
      "type": "select",
      "options": "1..2",
      "default": 2,
      "description": "The number of products displayed per row on smaller screens"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 48,
      "description": "The number of products shown at a time on the Products page"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Shows the product search area"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "product_image_zoom",
      "label": "Enable product image zoom",
      "type": "boolean",
      "default": true,
      "description": "Click to open a larger version of the Product page image"
    },
    {
      "variable": "desktop_product_page_images",
      "label": "Desktop product page images",
      "type": "select",
      "options": [
        ["Thumbnails", "thumbnails"],
        ["Carousel", "carousel"],
        ["Stacked 2 column", "two-column"],
        ["Stacked full width", "stacked"]
      ],
      "default": "carousel",
      "description": "Sets the display of the Product page gallery"
    },
    {
      "variable": "mobile_product_page_images",
      "label": "Mobile product page image carousel",
      "type": "select",
      "options": [
        ["Show thumbnails", "show-thumbnails"],
        ["Hide thumbnails", "hide-thumbnails"]
      ],
      "default": "show-thumbnails",
      "description": "Choose to hide or show thumbnails on the mobile Product page carousel"
    },
    {
      "variable": "show_related_products",
      "label": "Show related products",
      "type": "boolean",
      "default": true,
      "description": "Displays related products on the Product page"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
